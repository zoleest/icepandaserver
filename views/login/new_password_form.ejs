<!DOCTYPE html>
    <html>
        <%- include('../partials/head'); %>
<body class="vh-100">
    <div class="container-fluid h-100">
        <div class="row align-items-center h-100 pt-lg-0 pt-5 login-form-container">
            <div class="col-12 col-lg-3 d-none d-lg-block"></div>
            <div class="col-12 col-lg-6 align-middle ">
                <div class="w-100 bg-dark bg-opacity-75 p-3 mx-auto">
                    <h2 class="text-light"><%=language.login.newPasswordTitle %></h2>
                    <% if(error !== null){ %>
                      <h4> <span class="text-danger"><%=language.errorDefaults.error %>: </span><span class="text-light"><%=error %></span></h4>
                    <% } %>
                    <form id="asd" method="post">
                        <form method="post">
                            <input  type="password" minlenght="8" name="password" class="form-control mt-3" placeholder="<%=language.login.newPasswordPasswordLabel%>" required>
                            <input type="password" minlenght="8" name="confirmation" class="form-control mt-3" placeholder="<%=language.login.newPasswordPasswordAgainLabel%>" required>
                            <input name="key" type="hidden" value="<%=key %>">
                            <input type="submit" class="btn btn-success mt-3">
                        </form>
                    </div>

            </div>
            <div class="col-12 col-lg-3 d-none d-lg-block"></div>
        </div>
    </div>
</body>
</html>

